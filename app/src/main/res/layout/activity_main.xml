<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9bbdcf"
        tools:context="com.example.miszk.rozpoznawarkatablic.MainActivity">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Wpisz 2 lub 3 pierwsze litery z tablicy rejestracyjnej:"
            app:layout_constraintHorizontal_bias="0.242" app:layout_constraintVertical_bias="0.032"
            android:layout_marginTop="8dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
            android:textAppearance="@android:style/TextAppearance.Holo.Large"
            android:textColor="#18183e" android:textAlignment="center" android:id="@+id/tv_order"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:fontFamily="casual"/>


    Â 
    <EditText
            android:id="@+id/input_search"
            android:layout_height="60dp"
            android:layout_width="130dp"
            android:hint="KRK" android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="0dp" app:layout_constraintLeft_toLeftOf="@+id/tv_order"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/tv_order"
            app:layout_constraintHorizontal_bias="0.502"
            android:maxLength="3"
            android:fontFamily="monospace" android:textSize="30sp"
            android:inputType="textCapCharacters"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_answer" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/input_search" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="24sp" android:textColor="#313160" android:fontFamily="casual"
            app:layout_constraintHorizontal_bias="0.501"/>
    <Button
            android:text="Szukaj"
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:id="@+id/button"
            app:layout_constraintLeft_toRightOf="@+id/input_search" android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/tv_order"
            android:onClick="onClick [MainActivity]" android:fontFamily="monospace"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notImportantLetters" android:textSize="30sp" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/input_search" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/input_search"
            app:layout_constraintTop_toTopOf="@+id/input_search" android:layout_marginTop="0dp"
            android:text="    54YH" android:fontFamily="monospace"
            app:layout_constraintBottom_toBottomOf="@+id/input_search" android:layout_marginBottom="0dp"/>


</android.support.constraint.ConstraintLayout>
